<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="120dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">


        <ImageView
            android:id="@+id/imgProduct"
            android:layout_width="93dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="7dp"
            android:layout_marginStart="16dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="10dp" />

        <TextView
            android:id="@+id/txtPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="$4.99"

            android:textColor="#000"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:layout_below="@+id/txtDescription"
            android:layout_alignTop="@+id/imgTag"
            android:layout_toEndOf="@+id/imgProduct" />

        <TextView
            android:id="@+id/txtDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:lines="2"

            android:scrollHorizontally="false"
            android:text="Chicharrones shaman 90's bespoke adaptogen. Marfa Chicharrones shaman 90's bespoke adaptogen. Marfa"
            android:textColor="#000"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="8dp"

            android:layout_alignTop="@+id/imgProduct"
            android:layout_toEndOf="@+id/imgProduct" />

        <ImageView
            android:id="@+id/imgTag"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="10dp"
            app:srcCompat="@drawable/common_google_signin_btn_icon_dark_normal"
            tools:layout_editor_absoluteX="378dp"
            tools:layout_editor_absoluteY="67dp"
            android:layout_below="@+id/txtDescription"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</android.support.v7.widget.CardView>